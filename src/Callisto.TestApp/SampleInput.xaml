<UserControl
    x:Class="XamlControlsUITestApp.SampleInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XamlControlsUITestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <StackPanel>
            <TextBlock Margin="0,0,0,18" FontFamily="Segoe UI" FontWeight="SemiLight" Typography.StylisticSet20="True" FontSize="26.667" Text="Add Item" />
            <TextBox x:Name="EnterItemName" Width="300" Height="35" HorizontalAlignment="Left" />
            <Button x:Name="defaultbutton" Content="Add" Width="100" Margin="0,14,0,0" Click="defaultbutton_Click_1" HorizontalAlignment="Right" Background="Teal" />
        </StackPanel>
    </Grid>
</UserControl>
